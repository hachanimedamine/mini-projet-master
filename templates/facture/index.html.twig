{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <br><br>   <br><br>
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Statut</th>
                <th>Montant_facture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.code }}</td>
                <td>{{ facture.statut }}</td>
                <td>{{ facture.montantFacture }}</td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}">show</a>
