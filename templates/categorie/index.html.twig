{% extends 'base.html.twig' %}

{% block title %}Listes des Catégories{% endblock %}

{% block body %}
    <br><br>   <br><br>
    <h1>Listes des Catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.libelle }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}">Afficher</a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Liste Vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}">Ajouter Catégorie</a>
{% endblock %}
